{#def title=None, open=False #}

<li class="{% if open %}uk-open{% endif %}">
    <a class="uk-accordion-title" href>
        {{ title }}
        <span class="uk-accordion-icon" uk-icon="icon: chevron-down; ratio: 0.8"></span>
    </a>
    <div class="uk-accordion-content">
        {{ content }}
    </div>
</li>