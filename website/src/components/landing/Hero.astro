<section class="min-h-screen flex flex-col items-center justify-center px-4 md:px-8 pt-24 pb-16 relative">
  <!-- Ambient glow -->
  <div class="hero-glow"></div>

  <!-- Hero text -->
  <div class="text-center mb-12 md:mb-14 relative z-10">
    <div class="inline-flex items-center gap-2 bg-primary/10 border border-primary/20 px-4 py-1.5 rounded-full text-sm text-primary font-medium mb-8 badge-pulse">
      Free &amp; Open Source
    </div>
    <h1 class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-[1.1] mb-6">
      Stop Chatting.<br/>
      <span class="text-gradient">Start Doing.</span>
    </h1>
    <p class="text-base md:text-lg text-muted-foreground max-w-md mx-auto font-normal leading-relaxed mb-8">
      Chat apps just talk. Caipi is a fast, lightweight app for Claude Code â€” so AI can finally do things, not just say things.
    </p>
    <div class="flex flex-wrap justify-center gap-3">
      <a href="#download" class="btn-primary">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
        </svg>
        Download
      </a>
      <a href="https://github.com/pietz/caipi" class="btn-secondary">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </div>
  </div>

  <!-- Demo Video -->
  <div class="relative z-10 w-full max-w-4xl animate-float-in">
    <div class="video-container">
      <video
        autoplay
        loop
        muted
        playsinline
        preload="auto"
        controls
        poster="/demo-poster.jpg"
        class="demo-video"
      >
        <source src="/demo.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-muted-foreground text-xs animate-bounce-subtle">
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
</section>

<style>
  .hero-title {
    letter-spacing: -0.03em;
  }

  .video-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 0.25);
    border: 1px solid rgba(255, 255, 255, 0.15);
    background: var(--background);
  }

  .demo-video {
    display: block;
    width: 100%;
    height: auto;
  }
</style>
