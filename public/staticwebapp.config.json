{
    "platform": {
        "apiRuntime": "python:3.10"
    },
    "trailingSlash": "auto",
    "auth": {
        "identityProviders": {
            "github": {
                "registration": {
                    "clientIdSettingName": "GITHUB_CLIENT_ID",
                    "clientSecretSettingName": "GITHUB_CLIENT_SECRET"
                }
            }
        }
    },
    "routes": [
        {
            "route": "/app",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login/github",
            "redirect": "/.auth/login/github?post_login_redirect_uri=/app"
        },
        {
            "route": "/.auth/login/aad",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/api/users/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/api/projects/*",
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "navigationFallback": {
        "rewrite": "index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/css/*"
        ]
    },
    "responseOverrides": {
        "401": {
            "redirect": "/login",
            "statusCode": 302
        }
    }
}