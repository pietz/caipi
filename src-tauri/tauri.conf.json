{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Caipi",
  "version": "0.4.0",
  "identifier": "com.pietz.caipi",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Caipi",
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 16,
          "y": 16
        },
        "width": 900,
        "height": 640,
        "minWidth": 800,
        "minHeight": 512,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data: blob: https:; font-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost http://localhost:* ws://localhost:*; object-src 'none'; frame-src 'none'; base-uri 'self'; form-action 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "minimumSystemVersion": "12.0",
      "dmg": {
        "windowSize": {
          "width": 540,
          "height": 380
        },
        "appPosition": {
          "x": 140,
          "y": 180
        },
        "applicationFolderPosition": {
          "x": 400,
          "y": 180
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUzQTk4NUY4RjA0QjA0MkQKUldRdEJFdncrSVdwNDBlS0luSXpjd2VUWEViREJhSlkzRDBZNjNQRVVDeHRNQ1RhdEJEdXdoVG8K",
      "endpoints": [
        "https://github.com/pietz/caipi.ai/releases/latest/download/latest.json"
      ]
    }
  }
}
