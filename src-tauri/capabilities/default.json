{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [{ "path": "$HOME/**" }, { "path": "/tmp/**" }]
    },
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-watch",
    "fs:allow-unwatch",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**" }]
    },
    "updater:default",
    "process:allow-restart"
  ]
}
