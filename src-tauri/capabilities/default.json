{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$TEMP/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" }
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "os:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-watch",
    "fs:allow-unwatch",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$TEMP/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" }
      ]
    },
    "updater:default",
    "process:allow-restart"
  ]
}
