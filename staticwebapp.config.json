{
    "routes": [
        {
            "route": "/app",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/login/github",
            "redirect": "/.auth/login/github"
        },
        {
            "route": "/.auth/login/aad",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/api/users/*",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/api/projects/*",
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "navigationFallback": {
        "rewrite": "index.html",
        "exclude": [
            "/images/*.{png,jpg,gif}",
            "/css/*"
        ]
    },
    "responseOverrides": {
        "401": {
            "redirect": "/login",
            "statusCode": 302
        }
    }
}