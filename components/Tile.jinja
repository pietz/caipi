{#def title, value, capacity=None, icon=None #}

<article>
    {% if icon %}
    <div style="display:flex;justify-content:space-between">
        <h6>{{ title }}</h6>
        <Icon name={icon} />
    </div>
    {% else %}
    <h6>{{ title }}</h6>
    {% endif %}
    {% if capacity %}
    <h3 style="margin-bottom:3px">{{ value }}</h3>
    <progress value="{{ value }}" max="{{ capacity }}" style="margin:0"></progress>
    {% else %}
    <h3>{{ value }}</h3>
    {% endif %}
</article>

